{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Electron Main",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd",
            "program": "${workspaceFolder}/main.js",
            "args": [
                "."
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "preLaunchTask": "Start Frontend",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}