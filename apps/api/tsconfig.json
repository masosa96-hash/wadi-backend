{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "types": [
      "node",
      "cors"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "src/_archived"
  ]
}